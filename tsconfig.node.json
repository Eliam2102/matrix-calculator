{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "types": [
  	"node",
  	"vite/client",
  	"vitest",
  	"jest"
	  ]
  },
  "include": [
    "./vite.config.ts",
    "./vite.setup.ts",
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
